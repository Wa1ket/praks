<Application x:Class="praks.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:praks"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <LinearGradientBrush x:Key="BackgroundWindowResource">
            <GradientStop Offset="0.00"  Color="#FF87A0DE"></GradientStop>
            <GradientStop Offset="0.50"  Color="Azure"></GradientStop>
            <GradientStop Offset="1.00"  Color="#FF009CFF"></GradientStop>
        </LinearGradientBrush>
    </Application.Resources>
</Application>
